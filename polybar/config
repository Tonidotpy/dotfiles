[colors]
background      =   ${xrdb:background}
background-alt  =   ${xrdb:color10}
foreground      =   ${xrdb:foreground}
foreground-alt  =   ${xrdb:color9}

primary     =   ${xrdb:color1}
secondary   =   ${xrdb:color2}
transparent =   #0fff

white   =   ${xrdb:color15}
black   =   ${xrdb:color0}

warning =   ${xrdb:color5}
alert   =   ${xrdb:color6}

full    =   #53f74a
good    =   #a5fa49
half    =   #f6fc47
quarter =   #ff5e00
empty   =   #f54040


;;; ----------- Bars ---------- ;;;

[bar/bottom]
locale = it_IT.UTF-8

width = 100%
height = 25
fixed-center = true
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "JetBrains Mono:size=9"

modules-center = xwindow

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

;wm-restack = i3
override-redirect = false

[bar/main]
locale = it_IT.UTF-8

;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 7.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.primary}

border-top-size      = 2
border-right-size    = 7
border-bottom-size   = 0
border-left-size     = 7
border-color = ${colors.transparent}

padding-right = 2
padding-left  = 0

module-margin-left = 1
module-margin-right = 1

font-0 = "JetBrains Mono:weight=bold:size=9;2"
font-1 = "FontAwesome:size=11;3"
font-2 = "Material Icons:size=11;3"
font-3 = "Noto Emoji:scale=11;2"

modules-left = i3
modules-center = date
modules-right = wlan xbacklight pulseaudio microphone headphones camera xkeyboard battery powermenu

;wm-restack = i3
override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true


;;; ---------- Modules ---------- ;;;

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
; pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.primary}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-overline= ${colors.primary}
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-overline = ${colors.primary}
label-visible-padding = ${self.label-focused-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.warning}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |
[global/wm]
margin-top = 5
margin-bottom = 5

